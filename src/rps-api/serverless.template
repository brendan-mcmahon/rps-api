{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Rock Paper Scissors game using WebSockets",

  "Resources": {
    "DeploymentBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "rps-api-deployment-bucket"
      }
    },
    "RockPaperScissorsFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "rps-api::rps_api.Function::FunctionHandler",
        "Runtime": "dotnet8",
        "CodeUri": "",
        "MemorySize": 256,
        "Timeout": 30,
        "Role": null,
        "Policies": ["AWSLambdaBasicExecutionRole", "AmazonDynamoDBFullAccess"],
        "Events": {
          "WebSocketConnect": {
            "Type": "WebSocket",
            "Properties": {
              "ApiId": {"Ref": "WebSocketApi"},
              "Route": "$connect"
            }
          },
          "WebSocketDisconnect": {
            "Type": "WebSocket",
            "Properties": {
              "ApiId": {"Ref": "WebSocketApi"},
              "Route": "$disconnect"
            }
          },
          "WebSocketDefault": {
            "Type": "WebSocket",
            "Properties": {
              "ApiId": {"Ref": "WebSocketApi"},
              "Route": "$default"
            }
          }
        }
      }
    },
    "WebSocketApi": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Name": "RockPaperScissorsWebSocketApi",
        "ProtocolType": "WEBSOCKET",
        "RouteSelectionExpression": "$request.body.action"
      }
    },
    "WebSocketStage": {
      "Type": "AWS::ApiGatewayV2::Stage",
      "Properties": {
        "ApiId": {"Ref": "WebSocketApi"},
        "StageName": "Prod",
        "AutoDeploy": true
      }
    }
  },

  "Outputs": {
    "WebSocketURI": {
      "Description": "The WSS Protocol URI to connect to",
      "Value": {
        "Fn::Sub": "wss://${WebSocketApi}.execute-api.${AWS::Region}.amazonaws.com/Prod"
      }
    }
  }
}